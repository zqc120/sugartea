<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_white">

    <com.dianjiake.android.view.widget.ToolbarSpaceView
        android:id="@+id/toolbar_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/toolbar_icon_left"
        android:layout_width="@dimen/toolbar_size"
        android:layout_height="@dimen/toolbar_size"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingLeft="@dimen/base_size3"
        android:paddingRight="@dimen/base_size3"
        android:src="@drawable/ic_shop_detail_back_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/toolbar_title"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_space" />


    <ImageView
        android:id="@+id/toolbar_icon_share"
        android:layout_width="@dimen/toolbar_size"
        android:layout_height="@dimen/toolbar_size"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingLeft="@dimen/base_size3"
        android:paddingRight="@dimen/base_size3"
        android:src="@drawable/ic_shop_detail_share_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_space" />

    <ImageView
        android:id="@+id/toolbar_icon_collection"
        android:layout_width="@dimen/base_size6"
        android:layout_height="@dimen/base_size6"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_shop_detail_uncollect_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/toolbar_title"
        app:layout_constraintRight_toLeftOf="@+id/toolbar_icon_share"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_space" />


</android.support.constraint.ConstraintLayout>