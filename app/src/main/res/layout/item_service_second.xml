<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/divider_size"
    android:layout_marginRight="@dimen/divider_size"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/click_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/base_size4">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_size4"
            app:placeholderImage="@color/divider"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/base_size2"
            android:layout_marginRight="@dimen/base_size2"
            android:layout_marginTop="@dimen/base_margin"
            android:singleLine="true"
            android:textColor="@color/text_content_secondary"
            android:textSize="@dimen/text_size_body" />
    </LinearLayout>

</FrameLayout>