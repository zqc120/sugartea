<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/base_size4">

    <com.dianjiake.android.view.calender.GregorianLunarCalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:glcv_GregorianThemeColor="@color/main"
        app:glcv_LunarThemeColor="@color/main"
        app:glcv_NormalTextColor="@color/text_content_secondary"
        app:glcv_ScrollAnimation="true" />
</LinearLayout>