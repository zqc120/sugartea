<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="TranslateStatusBarTheme" parent="BaseTheme">

    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="MainTabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">9dp</item>
        <item name="android:drawablePadding">@dimen/base_size1</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="PtrStyle">
        <item name="ptr_duration_to_close">200</item>
        <item name="ptr_duration_to_close_header">1000</item>
        <item name="ptr_keep_header_when_refresh">true</item>
        <item name="ptr_pull_to_fresh">false</item>
        <item name="ptr_ratio_of_header_height_to_refresh">1.0</item>
        <item name="ptr_resistance">1.7</item>
    </style>

    <style name="LoadingPageViewStubStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="ShareHolderStyle">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ShareIconStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ShareTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/text_content_title</item>
        <item name="android:layout_marginTop">@dimen/base_margin</item>
    </style>

    <style name="HomeFilterRadioStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:button">@null</item>
    </style>


    <style name="TagStyle">
        <item name="android:layout_width">@dimen/text_size_subhead</item>
        <item name="android:layout_height">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <!--购物券标签样式-->
    <style name="TagStyle.Card">
        <item name="android:text">券</item>
        <item name="android:background">@drawable/bg_text_card</item>
    </style>
    <!--促销标签样式-->
    <style name="TagStyle.Promotion">
        <item name="android:text">促</item>
        <item name="android:background">@drawable/bg_text_promotion</item>
    </style>

    <style name="AvatarStyle">
        <item name="roundAsCircle">true</item>
        <item name="placeholderImage">@drawable/ic_defaul_avatar</item>
    </style>

    <style name="ItemWhiteStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/button_size_normal</item>
        <item name="android:background">@drawable/click_white</item>
        <item name="android:paddingRight">@dimen/base_margin</item>
        <item name="android:paddingLeft">@dimen/base_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ItemIconStyle">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginLeft">@dimen/base_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ItemTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/text_content_secondary</item>
    </style>

    <style name="ItemSpaceStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ItemArrowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/base_size3</item>
        <item name="android:src">@drawable/ic_right_arrow</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginLeft">@dimen/base_margin</item>
    </style>

    <style name="ItemAddContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/text_content_title</item>
        <item name="android:layout_marginLeft">@dimen/base_margin</item>
        <item name="android:textColorHint">@color/text_content_hint</item>
    </style>

    <style name="SubscribeRadioStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/base_size1</item>
        <item name="android:textColor">@color/subscribe_gender_color</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

</resources>
