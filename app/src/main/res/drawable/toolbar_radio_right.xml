<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="@dimen/base_size1" android:topRightRadius="@dimen/base_size1" />
            <stroke android:width="1dp" android:color="@color/main" />
            <solid android:color="@color/text_white"></solid>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="@dimen/base_size1" android:topRightRadius="@dimen/base_size1" />
            <solid android:color="@color/main"></solid>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="@dimen/base_size1" android:topRightRadius="@dimen/base_size1" />
            <stroke android:width="1dp" android:color="@color/main" />
            <solid android:color="@color/colorPrimaryDark"></solid>
        </shape>
    </item>
</selector>