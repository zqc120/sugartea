<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/base_size1" />
            <solid android:color="@color/main_unable" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/gradient_main" android:startColor="@color/gradient_main_dark" />
            <corners android:radius="@dimen/base_size1" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/base_size1" />
            <gradient android:angle="90" android:endColor="@color/gradient_main_press" android:startColor="@color/gradient_main_dark_press" />
            <corners android:radius="@dimen/base_size1" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/gradient_main" android:startColor="@color/gradient_main_dark" />
            <corners android:radius="@dimen/base_size1" />
        </shape>
    </item>


</selector>